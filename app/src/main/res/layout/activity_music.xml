<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/music_picture"
    tools:context=".MusicActivity">


    <ImageView
        android:id="@+id/littleStar"
        android:layout_width="256dp"
        android:layout_height="184dp"
        android:layout_marginStart="77dp"
        android:layout_marginTop="119dp"
        android:layout_marginEnd="78dp"
        android:layout_marginBottom="10dp"
        app:layout_constraintBottom_toTopOf="@+id/bake"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/little_star" />

    <ImageView
        android:id="@+id/bake"
        android:layout_width="238dp"
        android:layout_height="287dp"
        android:layout_marginStart="95dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="78dp"
        android:layout_marginBottom="131dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/littleStar"
        app:srcCompat="@drawable/bakabaka" />
</android.support.constraint.ConstraintLayout>